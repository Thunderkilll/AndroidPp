<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <android.support.v7.widget.CardView
        android:id="@+id/leader_row"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="172dp">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="118dp"
                android:layout_height="113dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="48dp"
                android:contentDescription="@string/imgLeaderboard"
                android:src="@drawable/reg_edittext_style"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_img"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/user_img"
                android:background="@drawable/reg_edittext_style"

                android:textSize="12sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/separateur"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_below="@+id/user_name"
                android:layout_alignStart="@+id/user_name"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="9dp"
                android:background="@color/blanc" />

            <TextView
                android:id="@+id/user_score"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/separateur"
                android:layout_alignStart="@+id/user_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/reg_edittext_style"

                android:textSize="20sp"
                android:typeface="serif" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>